extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    h3 Location:
    div.form-group
      label(for='faciltyName') Facility Name:
      input#facilityName.form-control(type="text", placeholder="USC or HSC", name='facilityName' value=(undefined===location ? '' : location.facilityName), required='true')
      label(for='unitNum') Unit Number:
      input#unitNum.form-control(type="text", placeholder="Unit Num (1, 2, 3, etc.)", name='unitNum' value=(undefined===location ? '' : location.unitNum), required='true')
      label(for='roomNum') Room Number:
      input#roomNum.form-control(type="text", placeholder="Room Num (123, 124, 125, etc.)", name='roomNum' value=(undefined===location ? '' : location.roomNum), required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg